<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#F8CC30">

        <TextView
            android:id="@+id/tvAddAnimal"
            android:layout_width="140dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="9dp"
            android:text="Add Animal"
            android:textColor="@color/purple_500"
            android:textSize="22dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imvAddPet"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="159dp"
        app:srcCompat="@drawable/happy" />

    <TextView
        android:id="@+id/tvPetsId"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvAddPet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="181dp"
        android:text="Pet Id"
        android:textSize="6pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPetsName"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvAddPet"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="181dp"
        android:text="Pet Name"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetsName"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetsName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Name"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/tvPetAge"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPetsName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="172dp"
        android:text="Pet Age"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetsAge"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetAge"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Age"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/tvPetDescription"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPetsAge"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="172dp"
        android:text="Pet Description"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetDescription"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Description"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/tvPetCategory"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPetDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="172dp"
        android:text="Pet Category"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetCategory"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetCategory"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Category"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/tvPetGender"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPetCategory"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="172dp"
        android:text="Pet Gender"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetGender"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetGender"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Gender"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/tvPetWeight"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPetGender"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="172dp"
        android:text="Pet Weight"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetWeight"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetWeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Weight"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/tvPetHeight"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPetWeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="172dp"
        android:text="Pet Height"
        android:textSize="6pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPetHeight"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/tvPetHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the Pet's Height"
        android:paddingStart="10dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpanAdd"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tvPetHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_corner"
        android:backgroundTint="@color/purple_500"
        android:text="Save"
        android:textColor="@color/white" />
</RelativeLayout>